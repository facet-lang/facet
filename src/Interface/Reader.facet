# NB: this file and its syntax is entirely aspirational.

Interface.Reader : Module

Reader : (R : Type) -> Interface
{ ask : R
, local : {A : Type} -> (R -> R) -> A -> A }

reader : { R, A : Type } -> (r : R) -> [Reader R]A -> A
{ a               -> a
, [ask       ; k] -> reader r (k r)
, [local f m ; k] -> reader r (reader (f r) m) }
