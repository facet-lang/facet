module Effect.Reader : Module

interface Reader : (R : Type) -> Interface
{ ask : { [Reader R] R }
, local : { A : Type } -> (R -> R) -> { [Reader R] A } -> { [Reader R] A } }

reader : { R, A : Type } -> (r : R) -> [Reader R] A -> A
{ a               -> a
, [ask       ; k] -> reader r (k r)
, [local f m ; k] -> reader r (reader (f r) m) }
